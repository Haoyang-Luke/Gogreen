<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton

        android:id="@+id/add"

        android:layout_width="48dp"

        android:layout_height="44dp"

        android:layout_marginStart="321dp"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="430dp"
        android:contentDescription="@string/app_Plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_input_add" />

    <TextView

        android:id="@+id/reuseHeader2"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginStart="70dp"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="567dp"
        android:text="@string/app_todays_items"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#241010"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button

        android:id="@+id/points2"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginStart="299dp"

        android:layout_marginEnd="24dp"


        android:text="back"



        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add"
        app:layout_constraintVertical_bias="1.0" />

    <Spinner
        android:id="@+id/listOfItems"
        android:layout_width="223dp"
        android:layout_height="38dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="258dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="435dp"
        android:background="#E1E4E3"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/totalPoints"
        android:layout_width="138dp"
        android:layout_height="39dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="504dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/remove"
        android:layout_width="47dp"
        android:layout_height="44dp"
        android:layout_marginStart="274dp"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="430dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>